{
    "name": "osc-mcp",
    "version": "1.0.0",
    "description": "MCP server for controlling the Behringer X32 digital mixer via OSC (Open Sound Control)",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "osc-mcp": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "start": "node dist/index.js",
        "prepare": "npm run build",
        "test": "node test-connection.js"
    },
    "keywords": [
        "mcp",
        "mcp-server",
        "osc",
        "open-sound-control",
        "behringer",
        "x32",
        "behringer-x32",
        "audio",
        "mixer",
        "digital-mixer",
        "model-context-protocol"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.5.0",
        "osc-js": "^2.4.1"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "typescript": "^5.3.3"
    }
}
